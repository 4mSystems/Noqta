<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="grand.app.aber_provider.utils.Constants" />

        <variable
            name="itemViewModel"
            type="grand.app.aber_provider.pages.settings.viewModels.ItemSocialViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()-> itemViewModel.itemAction()}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_social"
            android:layout_width="@dimen/dp40w"
            android:layout_height="@dimen/dp40h"
            android:layout_margin="@dimen/dp8h"
            app:imageUrl="@{itemViewModel.socialMediaData.image}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
