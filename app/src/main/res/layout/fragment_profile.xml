<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="te.app.moon.views.fragments.SplashFragment">

    <data>

        <variable
            name="viewmodel"
            type="te.app.notta.pages.settings.viewModels.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/board_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_board_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/member_profile"
            android:layout_width="@dimen/dp70w"
            android:layout_height="@dimen/dp70h"
            android:layout_marginTop="@dimen/dp15h"
            android:src="@drawable/splash"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp21w"
            android:layout_height="@dimen/dp21h"
            android:layout_marginEnd="@dimen/dp4w"
            android:src="@drawable/ic_edit_profile"
            app:layout_constraintBottom_toBottomOf="@id/member_profile"
            app:layout_constraintEnd_toEndOf="@id/member_profile" />

        <te.app.notta.customViews.views.CustomTextViewMedium
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8h"
            android:text="Ahmed Bakry"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/member_profile" />

        <te.app.notta.customViews.views.CustomTextViewRegular
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5h"
            android:text="medobakry00@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6h"
            android:text="@string/logout"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="@dimen/dp15h"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginTop="@dimen/dp12h"
            android:layout_marginEnd="@dimen/dp15w"
            app:cardCornerRadius="@dimen/dp8h"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/logout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_students"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_profile"
                    app:iconGravity="textTop"
                    app:iconTintMode="multiply"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_groups"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_groups"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_groups"
                    app:iconGravity="textTop"
                    app:iconTintMode="multiply"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_points"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_points"
                    app:iconGravity="textTop"
                    app:iconTintMode="multiply"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_gifts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/my_gifts"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_gift"
                    app:iconGravity="textTop"
                    app:iconTintMode="multiply"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.constraintlayout.helper.widget.Flow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp18w"
                    android:layout_marginTop="@dimen/dp20h"
                    android:layout_marginEnd="@dimen/dp18w"
                    android:layout_marginBottom="@dimen/dp20h"
                    app:constraint_referenced_ids="btn_students,btn_groups,btn_points,btn_gifts"
                    app:flow_horizontalGap="@dimen/dp15h"
                    app:flow_horizontalStyle="packed"
                    app:flow_maxElementsWrap="2"
                    app:flow_verticalGap="@dimen/dp15h"
                    app:flow_wrapMode="chain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>