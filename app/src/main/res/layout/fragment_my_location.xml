<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="te.app.moon.views.fragments.SplashFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="grand.app.aber_provider.pages.myLocations.viewModels.MyLocationsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp6h"
            app:layout_constraintBottom_toTopOf="@id/add_place"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_no_places"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp60h"
                    android:src="@drawable/ic_locations_empty"
                    android:visibility="@{viewmodel.locationsAdapters.itemCount==0?View.VISIBLE:View.GONE,default=gone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                    android:id="@+id/tv_no_places1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp4w"
                    android:layout_marginTop="@dimen/dp18h"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:text="@string/no_place"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black"
                    android:visibility="@{viewmodel.locationsAdapters.itemCount==0?View.VISIBLE:View.GONE,default=gone}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_no_places" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adapter="@{viewmodel.locationsAdapters}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:orientation="@{`1`}"
                    tools:listitem="@layout/item_my_location"
                    app:span="@{`1`}" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12w"
            android:layout_marginTop="@dimen/dp25h"
            android:layout_marginEnd="@dimen/dp12w"
            android:layout_marginBottom="@dimen/dp15h"
            android:background="@drawable/corner_view_gradient"
            android:onClick="@{()-> viewmodel.toAddPlace()}"
            android:text="@string/add_place"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/dp10h"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
