<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="te.app.notta.pages.home.viewModels.ItemGroupStudentViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tv_member"
            android:layout_width="@dimen/dp60w"
            android:layout_height="@dimen/dp60h"
            android:layout_margin="@dimen/dp4h"
            android:scaleType="centerCrop"
            android:src="@drawable/splash"
            app:imageUrl="@{viewModel.studentsItem.studentImage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp8h" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/dp27w"
            android:layout_height="@dimen/dp27h"
            android:layout_marginTop="@dimen/dp50h"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@{viewModel.studentsItem.studentPoints}"
            android:textColor="@color/colordark"
            android:textSize="@dimen/sp5"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_icon_feather_check_circle"
            app:iconGravity="textTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>