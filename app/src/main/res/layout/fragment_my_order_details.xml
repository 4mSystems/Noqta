<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="grand.app.moon.views.fragments.SplashFragment">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="grand.app.aber_provider.utils.Constants" />

        <variable
            name="viewmodel"
            type="grand.app.aber_provider.pages.profile.viewModels.ProfileFollowersViewModels" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_pages_header"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                app:cardCornerRadius="@dimen/dp8h"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp4h">


                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_services_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_number"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_services_name_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_services_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="AS4544410"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/v_services_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_services_name_value" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_total"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_service_location_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_services_name" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_location_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="٢٠٠ ريال"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_services_name" />

                    <View
                        android:id="@+id/v_service_location"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_service_location" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_date"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_service_time_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service_location" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="٥/٥/٢٠٢٠"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service_location" />

                    <View
                        android:id="@+id/v_service_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_service_time" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/product_total"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_service_status_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service_status" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_service_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="١٧٠ ريال"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service_status" />

                    <View
                        android:id="@+id/v_service"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_service_status" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_delivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/delivery_total"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_delivery_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_delivery_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="١٧٠ ريال"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_service" />

                    <View
                        android:id="@+id/v_delivery_price"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_delivery" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_promo_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/promo_code_total"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_promo_code_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_delivery_price" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_promo_code_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="١٧٠ ريال"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_delivery_price" />

                    <View
                        android:id="@+id/v_promo_code_price"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_promo_code" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/promo_code_total"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toStartOf="@id/tv_payment_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_promo_code_price" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_payment_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="١٧٠ ريال"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_promo_code_price" />

                    <View
                        android:id="@+id/v_payment"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_payment" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                        android:id="@+id/tv_delivery_user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp8h"
                        android:text="@string/delivery_user_info"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colordark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_payment" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp14h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="أحمد مصطفي بكري"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_delivery_user_info" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp4h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="العنوان : ٦شارع الخلود مدينة نصر القاهرة"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_marginTop="@dimen/dp4h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="الهاتف : ٠٢١٢٥٤٨٤٨٤٨٤٨٤٨٤٨٤"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colordark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

                    <View
                        android:id="@+id/v_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/tv_phone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10w"
                        android:layout_marginTop="@dimen/dp20h"
                        android:src="@drawable/ic_follow_success"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_info" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp4w"
                        android:layout_marginTop="@dimen/dp6h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_accepted"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colordark"
                        android:textSize="@dimen/sp10"
                        app:layout_constraintEnd_toStartOf="@id/tv_shipped"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ic_accept" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_accept_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_line_hor"
                        app:layout_constraintBottom_toBottomOf="@id/ic_accept"
                        app:layout_constraintStart_toEndOf="@id/ic_accept"
                        app:layout_constraintTop_toTopOf="@id/ic_accept" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_shipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20h"
                        android:src="@drawable/ic_follow_success"
                        app:layout_constraintStart_toEndOf="@id/ic_accept_line"
                        app:layout_constraintTop_toBottomOf="@+id/v_info" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_shipped"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp6h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_shipped"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colordark"
                        android:textSize="@dimen/sp10"
                        app:layout_constraintEnd_toStartOf="@id/tv_on_way"
                        app:layout_constraintStart_toEndOf="@id/ic_accept_line"
                        app:layout_constraintTop_toBottomOf="@id/ic_shipped" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_shipped_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_line_hor"
                        app:layout_constraintBottom_toBottomOf="@id/ic_shipped"
                        app:layout_constraintStart_toEndOf="@id/ic_shipped"
                        app:layout_constraintTop_toTopOf="@id/ic_shipped" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_on_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20h"
                        android:src="@drawable/ic_follow_success"
                        app:layout_constraintStart_toEndOf="@id/ic_shipped_line"
                        app:layout_constraintTop_toBottomOf="@+id/v_info" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_on_way"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp6h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_on_way"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colordark"
                        android:textSize="@dimen/sp10"
                        app:layout_constraintEnd_toStartOf="@+id/tv_delivered"
                        app:layout_constraintStart_toEndOf="@id/ic_shipped_line"
                        app:layout_constraintTop_toBottomOf="@id/ic_on_way" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_on_way_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_line_hor"
                        app:layout_constraintBottom_toBottomOf="@id/ic_on_way"
                        app:layout_constraintStart_toEndOf="@id/ic_on_way"
                        app:layout_constraintTop_toTopOf="@id/ic_on_way" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:src="@drawable/ic_follow_waiting"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_on_way_line"
                        app:layout_constraintTop_toBottomOf="@+id/v_info" />

                    <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                        android:id="@+id/tv_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp6h"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:text="@string/order_delivered"
                        android:textAlignment="center"
                        android:textColor="@color/colordark"
                        android:textSize="@dimen/sp10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_on_way_line"
                        app:layout_constraintTop_toBottomOf="@id/ic_delivered" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/br"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="tv_delivered,tv_on_way,tv_shipped,tv_delivered" />

                    <View
                        android:id="@+id/v_status"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8h"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/br" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp18h"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/v_status"
                        tools:listitem="@layout/item_order_detail" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>