<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                 
                                
                                                                                          
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp8w"
        android:layout_marginTop="@dimen/dp3h"
        android:layout_marginEnd="@dimen/dp8w"
        android:tag="layout/item_order_detail_0"            
        app:cardCornerRadius="@dimen/dp8h"
        app:cardElevation="4dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_parts_image"
                android:layout_width="@dimen/dp60w"
                android:layout_height="@dimen/dp60h"
                android:layout_marginStart="@dimen/dp8w"
                android:layout_marginTop="@dimen/dp8h"
                android:scaleType="centerCrop"
                android:src="@drawable/parts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_parts_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp6h"
                android:layout_marginEnd="@dimen/dp10w"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="طقم دواسات ٥ قطع يونيفرسال و دواسة هدية علي العرض خدمة ضمان سنة علىي الدواسات مقدمة من الشركة الرئيسية"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_parts_image"
                app:layout_constraintTop_toTopOf="@id/ic_parts_image" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginTop="@dimen/dp6h"
                android:text="3 قطع"
                app:backgroundTint="@color/colordark"
                app:cornerRadius="@dimen/dp4h"
                app:layout_constraintStart_toEndOf="@id/ic_parts_image"
                app:layout_constraintTop_toBottomOf="@id/tv_parts_name" />

            <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_parts_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10w"
                android:layout_marginEnd="@dimen/dp10w"
                android:text="200 درهم"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintBottom_toBottomOf="@id/btn_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_count"
                app:layout_constraintTop_toTopOf="@id/btn_count" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/br"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="btn_count,ic_parts_image,tv_parts_price" />

            <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp12h"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dp6h"
                android:text="جاري التوصيل"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_parts_image"
                app:layout_constraintTop_toBottomOf="@id/br" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

         