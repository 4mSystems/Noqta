<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                                                

                                                                 

                 
                                    
                                                                                     
           


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4h"
        android:tag="layout/item_home_0"                                                                                 
                                                                                       
        app:cardCornerRadius="@dimen/dp8h"
        app:cardElevation="4dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_services_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10h"
                android:tag="binding_1"                               
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toStartOf="@id/tv_services_name_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_services_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:tag="binding_2"                                                                        
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_services_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/tv_services_name" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:drawableStart="@drawable/ic_order_location"
                android:drawablePadding="@dimen/dp8w"
                android:gravity="center_vertical|start"
                android:text="@string/service_location"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_services_name" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_location_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:ellipsize="end"
                android:maxLines="1"
                android:tag="binding_3"                           
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/medium_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_service_location"
                app:layout_constraintTop_toBottomOf="@+id/v_services_name" />

            <View
                android:id="@+id/v_service_location"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/tv_service_location" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_client_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:drawableStart="@drawable/ic_client"
                android:drawablePadding="@dimen/dp8w"
                android:gravity="center_vertical|start"
                android:text="@string/client_name"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toStartOf="@id/tv_client_name_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_service_location" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_client_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:tag="binding_4"                              
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/medium_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_service_location" />

            <View
                android:id="@+id/v_client_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/tv_client_name" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:drawableStart="@drawable/ic_delivery_time"
                android:drawablePadding="@dimen/dp8w"
                android:gravity="center_vertical|start"
                android:text="@string/service_time"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                app:layout_constraintEnd_toStartOf="@id/tv_service_time_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_client_name" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:tag="binding_5"                                                                                                   
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/medium_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_client_name" />

            <View
                android:id="@+id/v_service_status"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp8h"
                android:background="@color/line_color"
                app:layout_constraintTop_toBottomOf="@id/tv_service_time" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:drawableStart="@drawable/ic_accept_time"
                android:drawablePadding="@dimen/dp8w"
                android:gravity="center_vertical|start"
                android:text="@string/aval_order_time"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colordark"
                android:tag="binding_6"                                                                    
                app:layout_constraintEnd_toStartOf="@id/tv_service_status_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_service_status" />

            <grand.app.aber_provider.customViews.views.CustomTextViewRegular
                android:id="@+id/tv_service_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                android:tag="binding_7"                                                                       
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold"
                                                                                                           
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_service_status" />

            <grand.app.aber_provider.customViews.views.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp12h"
                android:background="@color/colorPrimary"                                                                                                                                   
                android:tag="binding_8"                                                                                        
                                                                                               
                android:padding="@dimen/dp10h"
                android:text="@string/view_details"                                                                                                                                
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_service_status" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
         