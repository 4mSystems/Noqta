<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   


    

                                           

                                                

                                                                 

                 
                            
                                                                                        
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_services_orders_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/curve"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150h"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pages_header"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp14w"
            android:layout_marginTop="@dimen/dp15h"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_order_service" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15h"
            android:layout_marginBottom="@dimen/dp8h"
            android:text="@string/current"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorPrimary"
            app:icon="@drawable/ic_arrow_down"
            app:iconGravity="textEnd"
            app:iconTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/rc_services"
            app:layout_constraintTop_toBottomOf="@id/rc_services"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frame_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp12h"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/curve"
            tools:listitem="@layout/item_main_service_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         